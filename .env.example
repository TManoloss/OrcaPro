# Environment
ENVIRONMENT=development

# PostgreSQL
POSTGRES_USER=admin
POSTGRES_PASSWORD=CHANGE_IN_PRODUCTION
POSTGRES_DB=app_database
DATABASE_URL=postgresql://admin:CHANGE_IN_PRODUCTION@postgres:5432/app_database

# Redis
REDIS_PASSWORD=CHANGE_IN_PRODUCTION
REDIS_URL=redis://:CHANGE_IN_PRODUCTION@redis:6379/0

# RabbitMQ
RABBITMQ_DEFAULT_USER=admin
RABBITMQ_DEFAULT_PASS=CHANGE_IN_PRODUCTION
RABBITMQ_URL=amqp://admin:CHANGE_IN_PRODUCTION@rabbitmq:5672/

# JWT
JWT_SECRET=CHANGE_THIS_TO_A_LONG_RANDOM_STRING_IN_PRODUCTION
JWT_EXPIRATION=3600

# Grafana
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=CHANGE_IN_PRODUCTION

# Jaeger
JAEGER_ENDPOINT=http://jaeger:14268/api/traces

# Service Ports
AUTH_SERVICE_PORT=8001
TRANSACTION_SERVICE_PORT=8002
